<div class="max-w-4xl mx-auto bg-gray-800 text-white p-6 rounded-lg shadow-lg mt-6">
  <h1 class="text-3xl font-bold mb-6">Visits for <%= @unit.name %></h1>

  <div class="space-y-4" id="visits">
    <% @visits.each do |visit| %>
      <div class="bg-gray-700 p-4 rounded-lg hover:bg-gray-600 transition">
        <p><strong>Visitor:</strong> <%= link_to visit.visitor.name, visitor_path(visit.visitor.id) %></p>
        <p><strong>Date:</strong> <%= visit.date_time %></p>
        <p><strong>Status:</strong> <%= visit.status %></p>
        <p><strong>Unit:</strong> <%= visit.unit.name %></p>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to 'Back to Units', units_path, class: "bg-gray-600 hover:bg-gray-700 px-4 py-2 rounded-lg transition" %>
  </div>
</div>