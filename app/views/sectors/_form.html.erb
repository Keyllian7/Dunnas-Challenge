<%= form_with model: @sector, class: "bg-gray-700 p-6 rounded-lg shadow-md" do |sector| %>
    <div class="mb-4">
        <%= sector.label :name, class: "block text-white text-lg font-medium mb-2" %>
        <%= sector.text_field :name, class: "w-full p-2 rounded-lg bg-gray-800 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none " %><br>
    </div>

    <div class="mb-4">
        <%= sector.label :unit_id, "Unit", class: "block text-white text-lg font-medium mb-2"%>
        <%= sector.collection_select :unit_id, Unit.all, :id, :name, { prompt: "Select a unit" }, class: "w-full p-2 rounded-lg bg-gray-800 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div>
        <%= sector.submit "Save", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition" %>
    </div>
<% end %>