<div class="max-w-3xl mx-auto bg-gray-800 text-white p-6 rounded-lg shadow-lg mt-6">
  <h1 class="text-3xl font-bold mb-6">Login</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "block text-white text-lg font-medium" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 rounded-lg bg-gray-800 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none " %>
    </div>

    <div class="mt-4">
      <%= f.label :password, class: "block text-white text-lg font-medium" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 rounded-lg bg-gray-800 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none " %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mt-4 flex items-center space-x-2 mb-4">
        <%= f.check_box :remember_me%>
        <%= f.label :remember_me, class: "text-sm"%>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>